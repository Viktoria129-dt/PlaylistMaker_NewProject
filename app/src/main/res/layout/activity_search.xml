<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/frame16"
    android:paddingEnd="@dimen/frame16"
    android:background="?attr/colorPrimaryVariant"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/bttnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/minus16Pad"
        android:layout_marginStart="@dimen/minus16Pad"
        style="@style/styleForText"
        app:title="@string/Search"
        app:navigationIconTint="?attr/colorSecondary"
        android:layout_marginBottom="@dimen/frame16"
        app:navigationIcon="@drawable/back"
        app:contentInsetStartWithNavigation="12dp">
    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/frame16">
        <EditText
            android:textColor="@color/YP_Black"
            android:id="@+id/searchLine"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:hint="@string/Search"
            android:gravity="center_vertical"
            android:textColorHint="?attr/searchEditTextColor"
            android:paddingStart="12dp"
            android:drawablePadding="@dimen/m8MarPadd"
            android:drawableStart="@drawable/searchline_icon"
            android:inputType="text"
            android:lines="1"
            android:textCursorDrawable="@color/YP_Blue"
            android:background="@drawable/bg_edit_text"
            tools:ignore="RtlSymmetry"
            app:drawableTint="?attr/searchEditTextColor"
            android:imeOptions="actionDone"
            android:singleLine="true">
        </EditText>

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/clear"
            android:visibility="gone">
        </ImageView>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/searchResultsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
            </androidx.recyclerview.widget.RecyclerView>

            <include
                android:id="@+id/stateEmpty"
                layout="@layout/place_holder_search"
                android:visibility="gone" />

            <include
                android:id="@+id/errorPlaceholder"
                layout="@layout/place_holder_search_error"
                android:visibility="gone" />
        </FrameLayout>

        <!-- КОНТЕЙНЕР ИСТОРИИ ПОИСКА (виден когда поле пустое) -->
        <LinearLayout
            android:id="@+id/vgSearchHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/tvHistoryTitle"
                android:text="@string/you_searched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="42dp"
                android:paddingBottom="20dp"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="19sp"
                android:textColor="?attr/colorSecondary"
                android:gravity="center"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewSearchHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/track_one_item"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearHistory"
                        android:text="@string/clear_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="14sp"
                        android:textColor="?attr/colorPrimaryVariant"
                        android:textAllCaps="false"
                        android:textFontWeight="500"
                        android:elevation="@null"
                        android:fontFamily="@font/ys_display_medium"
                        android:background="@drawable/button_round"
                        app:backgroundTint="@null"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
